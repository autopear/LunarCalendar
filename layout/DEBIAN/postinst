#!/bin/bash
declare -a cydia
cydia=($CYDIA)
if [ -e /System/Library/PrivateFrameworks/PhotosUI.framework ]; then
	if [[ ! -e /System/Library/WeeAppPlugins/LunarCalendarAll.bundle ]]; then
		mkdir -p /System/Library/WeeAppPlugins/LunarCalendarAll.bundle
		ln -s /System/Library/WeeAppPlugins/LunarCalendar.bundle/en.lproj /System/Library/WeeAppPlugins/LunarCalendarAll.bundle/en.lproj
		ln -s /System/Library/WeeAppPlugins/LunarCalendar.bundle/ja.lproj /System/Library/WeeAppPlugins/LunarCalendarAll.bundle/ja.lproj
		ln -s /System/Library/WeeAppPlugins/LunarCalendar.bundle/ko.lproj /System/Library/WeeAppPlugins/LunarCalendarAll.bundle/ko.lproj
		ln -s /System/Library/WeeAppPlugins/LunarCalendar.bundle/zh_CN.lproj /System/Library/WeeAppPlugins/LunarCalendarAll.bundle/zh_CN.lproj
		ln -s /System/Library/WeeAppPlugins/LunarCalendar.bundle/zh_TW.lproj /System/Library/WeeAppPlugins/LunarCalendarAll.bundle/zh_TW.lproj
		ln -s /System/Library/WeeAppPlugins/LunarCalendar.bundle/LunarCalendar /System/Library/WeeAppPlugins/LunarCalendarAll.bundle/LunarCalendar
		ln -s /System/Library/WeeAppPlugins/LunarCalendar.bundle/Info-all.plist /System/Library/WeeAppPlugins/LunarCalendarAll.bundle/Info.plist		
	fi
else
	rm -f /System/Library/WeeAppPlugins/LunarCalendar.bundle/Info-all.plist
fi
if [[ ${CYDIA+@} ]]; then
	eval "echo 'finish:restart' >&${cydia[0]}"
fi
exit 0
